cat << 'EOF' > manifest.json
{
  "manifest_version": 3,
  "name": "TeamMind AI Summarizer",
  "version": "1.0",
  "description": "Summarize selected or pasted text using your TeamMind AI backend.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarize with TeamMind AI"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
EOF


